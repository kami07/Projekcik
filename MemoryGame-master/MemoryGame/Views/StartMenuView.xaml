<UserControl x:Class="MemoryGame.Views.StartMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MemoryGame.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="/MemoryGame;component/Assets/tło.jpg"/>
        </Grid.Background>

        <DockPanel LastChildFill="False" Grid.Row="1" Grid.Column="1">
            <Button Click="Play_Clicked" Background="gray" Foreground="Yellow" FontSize="18" Margin="300,250,0,250" Width="200">Start Game</Button>
        </DockPanel>
    </Grid>
</UserControl>
