                                <Border Style="{StaticResource CardBorder}" BorderBrush="{Binding BorderBrush}">
                                    <Image Stretch="Fill" Source="{Binding CardImage}" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
